/* Estilos generales */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html, body {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  font-family: "Adelphi PE Variable", Arial, sans-serif;
}

.background-video {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  overflow: hidden;
}

.background-video video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -60%);
  text-align: center;
  z-index: 2;
}

.overlay h1 {
  font-size: 4rem;
  color: white;
  text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
}

/* Carrusel en la parte superior */
.carousel-container {
  position: absolute;
  top: 0;
  width: 100%;
  height: 150px;
  overflow: hidden;
  z-index: 1;
}

.carousel-items {
  display: flex;
  gap: 10px;
  height: 100%;
  cursor: grab;
  overflow-x: auto;
  scroll-behavior: smooth;
}

.carousel-items::-webkit-scrollbar {
  display: none;
}

.carousel-item {
  flex: 0 0 auto;
  width: 120px;
  height: 120px;
}

.carousel-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  cursor: pointer;
}

/* Modal styles */
.modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 3;
  justify-content: center;
  align-items: center;
}

.modal-content {
  background: white;
  padding: 20px;
  border-radius: 8px;
  display: flex;
  gap: 20px;
  max-width: 800px;
  width: 90%;
}

.modal-content img {
  max-width: 200px;
  height: auto;
  object-fit: cover;
  border-radius: 8px;
}

.modal-text {
  flex: 1;
}

#modal-title {
  font-size: 1.5rem; /* Tamaño relativo al contenedor */
  font-weight: bold; /* Opcional: ajusta el peso de la fuente */
  margin: 0; /* Elimina márgenes predeterminados si es necesario */
  word-wrap: break-word; /* Asegura que el texto no desborde */
  text-align: center; /* Opcional: centra el texto */
}

.close-modal {
  position: absolute;
  top: 20px;
  right: 20px;
  font-size: 2rem;
  color: white;
  cursor: pointer;
}

/* Footer */
footer {
  position: fixed;
  bottom: 12px;
  width: 100%;
  text-align: center;
  z-index: 1;
}

.footer-contact {
  color: white;
  text-transform: uppercase;
  font-size: 1rem;
  text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
}

.footer-contact a {
  color: white;
  text-decoration: none;
}
